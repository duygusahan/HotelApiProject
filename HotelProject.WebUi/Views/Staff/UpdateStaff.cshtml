@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
    <br />
    <br />
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Vertical Form</h4>
            <div class="basic-form">
                <form method="post">
                    <div class="form-row">
                        <input type="hidden" asp-for="StaffId"/>
                        <div class="form-group col-md-6">
                            <label>Personel Adı</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Personel Adını Yazınız">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Personel Ünvanı</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Personel Ünvanını Yazınız">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Personel Görseli</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Personel Görselinin Url Giriniz">
                    </div>
                    <div class="form-group">
                        <label>Sosyal Medya Hesabı 1 </label>
                        <input type="text" asp-for="SocialMedia1" class="form-control" placeholder="Sosyal Medya Hesabını Yazınız">
                    </div>
                    <div class="form-group">
                        <label>Sosyal Medya Hesabı 2 </label>
                        <input type="text" asp-for="SocialMedia2" class="form-control" placeholder="Sosyal Medya Hesabını Yazınız">
                    </div>
                    <div class="form-group">
                        <label>Sosyal Medya Hesabı 3 </label>
                        <input type="text" asp-for="SocialMedia3" class="form-control" placeholder="Sosyal Medya Hesabını Yazınız">
                    </div>
                    <button type="submit" class="btn btn-dark">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

