@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- End Row -->
    <div class="row">
        <div class="col-12 m-b-30">
            <h4 class="d-inline">Çalışanlarımız</h4>
            <p class="text-muted">Birbirinden yetenekli ekip üyelerimiz</p>
            <div class="row">
                @foreach(var item in Model){
                    <div class="col-md-6 col-lg-3">
                        <div class="card">
                            <img class="img-fluid" src="@item.ImageUrl" alt="">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Title</p>
                                <div class="disabled-button">
                                    <a href="/Staff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-outline-danger" disabled="disabled">Sil</a>
                                    <a href="/Staff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-outline-success" disabled="disabled">Güncelle</a>
                                    <a href="/Staff/StaffDetail/@item.StaffId" class="btn mb-1 btn-outline-info" disabled="disabled">Detaylar</a>
                                    
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                }
               
                
            </div>
            <a class="btn mb-1 btn-outline-primary" href="/Staff/CreateStaff" disabled="disabled">Ekle</a>

        </div>
    </div>
    <!-- End Row -->
   
</div>

